# https://editorconfig.org/
# Used https://github.com/editorconfig/editorconfig/wiki/Projects-Using-EditorConfig

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false